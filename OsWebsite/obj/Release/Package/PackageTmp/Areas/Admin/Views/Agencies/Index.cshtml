@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<OsWebsite.Models.Agency>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .tree-Agencies {
        color: #fff;
        background: #2984ff;
        border-left-color: white;
    }
    .tree-Agencies a {
        border-left-color: white !important;
    }
    tr.Bold td {
        font-weight:bold
    }
    tr.none-bold td {
        font-weight:300
    }
    tr.none-bold td label {
        font-weight:300
    }
</style>
<section class="content-header"><h1>Quản lý yêu cầu làm đại lý</h1></section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box adm1">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("DeleteMuti", "Agencies", FormMethod.Post))
                        {
                            <input type="submit" value="Xóa" class="btn btn-default" onclick="return confirm('Bạn có muốn xóa yêu cầu đã chọn ?')" />
                            <div style='clear: both; height: 10px'></div>
                            <div class="panel panel-default">
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover">
                                            <tr class="trHeader">
                                                <th><input type="checkbox" id="CheckAll" /></th>
                                                <th>
                                                    Tên người liên hệ
                                                </th>
                                                <th>
                                                    Tiêu đề
                                                </th>
                                                <th>
                                                    Số điện thoại
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    Ngày tạo
                                                </th>
                                                <th>
                                                    Trạng thái
                                                </th>
                                                <th>
                                                    Xem chi tiết
                                                </th>
                                            </tr>
                                            @foreach (var item in Model)
                                            {
                                                if (item.IsActive == true)
                                                {
                                                    <tr class="trOdd none-bold">
                                                        <td><input type="checkbox" class="CheckboxID" name="ID" value="@item.ID" /></td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Phone)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>
                                                        <td>
                                                            @Html.Label(@item.DateCreate.ToString("dd/MM/yyyy"))
                                                        </td>
                                                        <td>
                                                            @if (item.IsActive == true)
                                                            {
                                                                @Html.Label("Đã xem");
                                                            }
                                                            else
                                                            {
                                                                @Html.Label("Chưa xem");
                                                            }
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "bnstatus" })
                                                        </td>
                                                    </tr>
                                                }
                                                else
                                                {

                                                    <tr class="trOdd Bold">
                                                        <td><input type="checkbox" class="CheckboxID" name="ID" value="@item.ID" /></td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Phone)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>
                                                        <td>
                                                            @Html.Label(@item.DateCreate.ToString("dd/MM/yyyy"))
                                                        </td>
                                                        <td>
                                                            @if (item.IsActive == true)
                                                            {
                                                                @Html.Label("Đã xem");
                                                            }
                                                            else
                                                            {
                                                                @Html.Label("Chưa xem");
                                                            }
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "bnstatus" })
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                        <div style="clear:both"></div>
                        <div class="page-list">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
