@model List<OsWebsite.Models.News>
@{
    <title>@ViewBag.MetaTitle</title>
    if (ViewBag.MetaDescription != null)
    {
        <meta name="description" content="@ViewBag.MetaDescription" />
    }
    if (ViewBag.MetaKeywords != null)
    {
        <meta name="keywords" content="@ViewBag.MetaKeywords" />
    }
    var NewsSlider = ViewBag.NewsSlider as List<OsWebsite.Models.NewsImages>;
    var Tag = ViewBag.Url;
}
<div class="banner-page">

</div>
<div class="box-product">
    <div class="container">
        <div class="row">
            <div style="padding-left: 0px;" class="col-md-9">
                <ul style="border-bottom: 0px!important; display: flex; flex-wrap: nowrap; overflow-x: scroll; overflow-y: hidden" class="nav nav-tabs nav-prod menuc">
                    @foreach (var item in ViewBag.MenuIdDetail)
                    {
                        <li style="flex: 0 0 auto">
                            <a ttId="@item.Tag" style="border: 0px!important; float: left; border-radius: 15px 15px 0 0; font-size: 17px; font-weight: bold; background-color: #EBEBEB; color: #000000; transition: background-color 500ms;" href="@item.Link">@item.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="box-content-product-page">
        <div class="container">
            <div class="row">
                <div style="background-color: #f5f5f5; padding-top: 10px" class="col-md-9">
                    <h4>
                        <a style="text-decoration: none; color: #000; font-weight: bold;" href="#">
                            @Model[0].Name
                        </a>
                    </h4>
                    <div style="padding-top: 10px; padding-bottom: 10px" class="col-md-1">
                        <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=@Model[0].Tag"><img style="padding-bottom: 10px" class="img img-responsive" src="~/Icon/Tin chi tiet/Face.png" /></a>
                        <a target="_blank" href="https://plus.google.com/share?url=@Model[0].Tag"><img style="padding-bottom: 10px" class="img img-responsive" src="~/Icon/Tin chi tiet/Viber.png" /></a>
                        <a target="_blank" href="https://plus.google.com/share?url=@Model[0].Tag"><img style="padding-bottom: 10px" class="img img-responsive" src="~/Icon/Tin chi tiet/Zalo.png" /></a>
                    </div>
                    <div style="padding-top: 10px;  padding-bottom: 10px" class="col-md-11">
                        @Html.Raw(@Model[0].ContentNew)
                    </div>
                    @Html.Action("NewsOthers", "News", new { MenuID = Model[0].MenuID, IdNews = Model[0].ID })
                </div>
                @Html.Action("Social_Banner", "Home")
            </div>
        </div>
    </div>
</div>
<script>
     var channel = "@Tag";
        $('.menuc a').each(function () {
            var c = $(this).attr('ttId').toLowerCase();
            if (c.lastIndexOf(channel) == 0) {
                    $(this).closest('li a').addClass('activemenu');
                }
        })
</script>