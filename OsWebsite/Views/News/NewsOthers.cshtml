@model List<OsWebsite.Models.News>
<h4>
    <a style="text-decoration: none; color: #000; font-weight: bold;" href="#">
        Cùng chuyên mục
    </a>
</h4>
@foreach (var item in Model.Take(3))
{
    <div style="padding-top: 10px; padding-bottom: 20px" class="col-sm-6 col-lg-4 box-item-pro-main item_product ">
        <div class="box-item-product-hot" style="height: 300px;">
            <div class="box-img-product">
                <a href="/@item.Tag">
                    <img src="@item.Img" alt="@item.Name">
                </a>
            </div>
            <h3 style="line-height: 16px!important" class="title-product-main title_sanPham">
                <a style="font-size: 16px; font-family: Arial; color: #4c5054; text-decoration: none" href="/@item.Tag">@item.Name</a>
            </h3>
            <span style="color: #4c5054" class="IdProduct-main">@Html.Raw(item.Decription.Substring(0, 110))...</span>
        </div>
    </div>

}

