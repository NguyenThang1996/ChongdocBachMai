@model List<OsWebsite.Models.News_Others_Result>
@functions
{
    public static string SubString(string textToTruncate, int length)
    {
        if (textToTruncate == null || textToTruncate.Length < length)
            return textToTruncate;
        int iNextSpace = textToTruncate.LastIndexOf(" ", length);
        return string.Format("{0}...", textToTruncate.Substring(0, (iNextSpace > 0) ? iNextSpace : length).Trim());
    }
}
<h4>
    @if (Session["Othernews"] != null)
    {
        <a style="text-decoration: none; color: #000; font-weight: bold;">
            @Session["Othernews"]
        </a>
    }
    else
    {
        <a style="text-decoration: none; color: #000; font-weight: bold;">
            Cùng chuyên mục
        </a>
    }
</h4>
@foreach (var item in Model.Take(3))
{
    <div style="padding-top: 10px; padding-bottom: 20px" class="col-sm-6 col-lg-4 col-md-4 col-xs-12 box-item-pro-main item_product ">
        <div class="box-item-product-hot" style="height: 300px;">
            <div class="box-img-product">
                <a href="/@item.Tag">
                    <img style="height: 170px; width: 100%; transition: all 500ms ease 0s;" class="img img-responsive" src="@item.Img" alt="@item.Name">
                </a>
            </div>
            <h3 style="line-height: 16px!important" class="title-product-main title_sanPham">
                <a style="font-size: 16px; font-family: Arial; color: #4c5054; text-decoration: none" href="/@item.Tag">@item.Name</a>
            </h3>
            <span class="IdProduct-main">@Html.Raw(SubString(item.Decription.ToString(), 110))</span>
        </div>
    </div>

}

