<div class="box-footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-7 col-md-7 box-menu-footer">
                <div class="col-md-2 icon-web">
                    <img src="/Areas/Admin/Content/Images/Footer/Logo.png" />
                </div>
                <div class="col-md-10 info-web">
                    @Html.Raw(ViewBag.Contact)

                </div>

            </div>
            <div class="col-sm-5 col-md-5 box-menu-footer">
                @foreach (var item in ViewBag.IconShare)
                {
                    <a href="@item.Link"><img style="float: right; margin: 40px 10px" src="@item.Image" alt="@item.Name" /></a>
                }
            </div>
        </div>
    </div>
    <style>
        .info-web p
        {
            color: white;
        }
        .box-item-dakin {
            border: 1px solid #dddddd;
            box-shadow: 0px 1px 1px 1px rgba(0, 0, 0, 0.1);
            /*border-radius: 10px;*/
        }

            .box-item-dakin .box-img-dakin {
                width: 100%;
                padding: 0;
            }

        .box-text-dakin {
            padding: 35px;
        }

        .box-item-dakin:hover {
            background-color: #009acf;
        }

        .box-text-dakin h3 {
            color: #0091cb;
        }

        .box-item-dakin:hover h3 {
            color: #fff;
        }

        .box-text-dakin span {
            display: block;
            line-height: 2;
            font-size: 16px;
            font-weight: 500;
            color: #7e7e7e;
            height: 150px;
            overflow: hidden
        }

        .box-item-dakin:hover span {
            color: #fff;
        }

        .box-text-dakin .btn {
            background-color: #009acf;
            color: #fff;
            border: none;
        }

        .box-item-dakin:hover .btn {
            background-color: #fff;
            color: #0091cb;
        }
    </style>
</div>