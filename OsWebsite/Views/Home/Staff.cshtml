@using OsWebsite.Models;
@model List<OsWebsite.Models.News_Get4Cap_Result>

@{
    <title>@ViewBag.MetaTitle</title>
    if (ViewBag.MetaDescription != null)
    {
        <meta name="description" content="@ViewBag.MetaDescription" />
    }
    if (ViewBag.MetaKeywords != null)
    {
        <meta name="keywords" content="@ViewBag.MetaKeywords" />
    }
    string Tag = System.IO.Path.GetFileNameWithoutExtension(Request.RawUrl);
    //kiểm tra tag xem có kèm gì khác ngoài tag
    string Tagcheck = Tag.Substring(Tag.LastIndexOf("?") + 1);
    //Replace hết kí tự lạ
    Tag = Tag.Replace("?" + Tagcheck, "");
}
<div class="box-product-hot">
    <div class="container">
        <div class="row">
            <div style="padding-left: 0px;" class="col-md-12">
                <ul style="border-bottom: 0px!important;" class="nav nav-tabs nav-prod">
                    <li class="active">
                        <a style="border: 0px!important; border-radius: 15px 15px 0 0; font-size: 17px; font-weight: bold; background-color: #870000; color: #fff !important; transition: background-color 500ms;" href="/danh-cho-nhan-vien-y-duoc">@ViewBag.NameGroupStaff</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row" style="background-color: #f5f5f5;" >
            @*<div style="background: #f5f5f5;padding-bottom: 45px;" class="col-md-9">*@
            <div class="col-md-9">
                @foreach (var item in Model.Where(x => x.MenuID == 325).Take(6))
                {
                    <div class="col-sm-6 col-lg-4 box-item-pro-main item_product ">
                        <div class="box-item-product-hot" style="height: 300px;">
                            <div class="box-img-product">
                                <a href="/@item.Tag">
                                    <img src="@item.Img" alt="Phòng tránh ngộ độc thực phẩm">
                                </a>
                            </div>
                            <h3 class="title-product-main title_sanPham">
                                <a href="/@item.Tag">@item.Name</a>
                            </h3>
                            <span class="IdProduct-main">@Html.Raw(item.Decription)</span>
                        </div>
                    </div>
                 }
            </div>
            <div style="height: 660px;">
                <div style="background: #525252;" class="col-md-3 thongtinthem">
                    <ul>
                        @foreach (var item in ViewBag.MenuIdStaff)
                        {
                            <li class="dichvu-yte">
                                <i class="fa fa-caret-right"></i>
                                <a style="font-size: 18px; font-weight: bold" href="@item.Link">
                                    @item.Name
                                </a>

                            </li>
                        }

                    </ul>

                </div>
                @Html.Action("Social_Banner", "Home")
            </div>
            
        </div>
    </div>
</div>

