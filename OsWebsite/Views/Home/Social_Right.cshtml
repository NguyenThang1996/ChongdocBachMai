<div style="background: #525252;" class="kienthucchung col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <ul>
        @foreach (var item in ViewBag.MenuIdSocial)
        {
            <li class="congdong">
                <a href="@item.Link" class="dropdown-top-right" style="font-size: 18px; font-weight: bold">
                    <i class="fa fa-caret-right"></i>
                    @item.Name
                </a>
                <ul class="" style="padding-left: 20px;">
                    @foreach (var child_item in ViewBag.Group)
                    {
                        if (child_item.IDCha == item.ID)
                        {
                            <li class="sub-congdong">
                                <img src="@child_item.Images" />
                                <a href="@child_item.Link">
                                    @child_item.Name
                                </a>
                            </li>
                        }
                    }
                </ul>
            </li>
        }
    </ul>
</div>
<script>
    var dropdown = document.getElementsByClassName("dropdown-top-right");
    var i;
    for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var dropdownContent = this.nextElementSibling;
            if (dropdownContent.style.display === "block") {
                dropdownContent.style.display = "none";
            } else {
                dropdownContent.style.display = "block";
            }
        });
    }
</script>
