        margin-left: 15px;
        margin-top: 15px;
        line-height: 2.5;
        background-color: #ff0000;
        color: #fff;
    }

    .clearfix {
        border-bottom: 1px solid #dcdcdc;
        padding-top: 10px;
    }

    .collapsed > .clearfix {
        border-bottom: none;
    }

    .tab-sub {
        font-weight: bold;
        color: #000;
        font-size: 16px;
    }

        .tab-sub:hover {
            cursor: pointer;
            text-decoration: none;
            color: #780000;
        }

    .content-sub-tab {
        padding-top: 10px;
        padding-bottom: 10px;
    }

    .a:hover {
        cursor: pointer;
        text-decoration: none;
    }
</style>

<div class="banner-page">

</div>
