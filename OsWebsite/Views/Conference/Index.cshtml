@using OsWebsite.Models;
@model PagedList.IPagedList<OsWebsite.Models.News_Get4Cap_Result>
@using PagedList.Mvc;

@{
    <title>@ViewBag.MetaTitle</title>
    if (ViewBag.MetaDescription != null)
    {
        <meta name="description" content="@ViewBag.MetaDescription" />
    }
    if (ViewBag.MetaKeywords != null)
    {
        <meta name="keywords" content="@ViewBag.MetaKeywords" />
    }
    string Tag = System.IO.Path.GetFileNameWithoutExtension(Request.RawUrl);
    //kiểm tra tag xem có kèm gì khác ngoài tag
    string Tagcheck = Tag.Substring(Tag.LastIndexOf("?") + 1);
    //Replace hết kí tự lạ
    Tag = Tag.Replace("?" + Tagcheck, "");
}
<style>
    .vertical-hoinghi {
        padding: 0;
    }

        .vertical-hoinghi li {
            display: block;
            border-bottom: 1px solid #dcdcdc;
            padding-top: 15px;
        }

        .vertical-hoinghi > li > .title-sub-hoinghi > .fa-angle-down {
            display: none;
        }

        .vertical-hoinghi > li > .collapsed.title-sub-hoinghi > .fa-angle-up {
            display: none;
        }

        .vertical-hoinghi > li > .collapsed.title-sub-hoinghi > .fa-angle-down {
            display: contents;
        }

    #content_4 {
        padding: 15px;
    }

    .title-hoinghi {
        padding-top: 15px;
        padding-bottom: 5px;
    }

    .dangky {
        padding-bottom: 15px;
    }

    .data-dky {
        border: 1px solid #ccc;
        border-radius: 25px;
        padding-left: 15px;
        width: 100%;
        max-width: 560px;
        padding-top: 5px;
        padding-bottom: 5px;
    }
    
    .content-dky {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding-left: 7px;
        width: 100%;
        min-height: 100px;
        max-width: 560px;
        padding-top: 5px;
        padding-bottom: 5px;
    }

    .button-dky {
        border: 1px solid #ccc;
        border-radius: 25px;
        text-align: center;
        width: 100%;
        background-color: #821212;
        color: #fff;
        padding-top: 5px;
