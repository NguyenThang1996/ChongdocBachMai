<script type="text/javascript">
    $(".button-dky").click(function () {
        if ($("#Name").val() === "") {
            alert("Bạn vui lòng nhập tên");
            $("#Name").focus();
            return false;
        }
        if ($("#Tochuc").val() === "") {
            alert("Bạn vui lòng nhập tổ chức");
            $("#Tochuc").focus();
            return false;
        }
        if ($("#Email").val() === "") {
            alert("Bạn vui lòng nhập email");
            $("#Email").focus();
            return false;
        }
        if ($("#Chucvu").val() === "") {
            alert("Bạn vui lòng nhập chức vụ");
            $("#Chucvu").focus();
            return false;
        }
        if ($("#Content").val() === "") {
            alert("Bạn vui lòng nhập thông tin góp ý");
            $("#Content").focus();
            return false;
        }
        var isorder = document.getElementById('Phone').value
        if (isNaN(isorder)) {
            alert("Số điện thoại phải bằng số");
            $("#Phone").focus();
            return false;
        }
        var Name = $("#Name").val();
        var Chucvu = $("#Chucvu").val();
        var Tochuc = $("#Tochuc").val();
        var Phong = $("#Phong").val();
        var Address = $("#Address").val();
        var Phone = $("#Phone").val();
        var Email = $("#Email").val();
        var Content = $("#Content").val();
        $.ajax({
            url: "/Conference/Conference",
            data: { Name: Name, Chucvu: Chucvu, Tochuc: Tochuc, Phong: Phong, Address: Address, Phone: Phone, Email: Email, Content: Content },
            success: function (response) {
                $("#Name").val("");
                $("#Chucvu").val("");
                $("#Tochuc").val("");
                $("Phong").val("");
                $("#Address").val("");
                $("#Phone").val("");
                $("#Email").val("");
                $("#Content").val("");
                alert("Cảm ơn bạn đã đăng ký. Chúng tôi sẽ gửi email xác nhận cho bạn sớm nhất có thể!");
            }
        });
    });
</script>
<script>
     var channel = "@Tag";
        $('.menuc a').each(function () {
            var c = $(this).attr('ttId').toLowerCase();
            if (c.lastIndexOf(channel) == 0) {
                    $(this).closest('li a').addClass('activemenu');
                }
        })
</script>