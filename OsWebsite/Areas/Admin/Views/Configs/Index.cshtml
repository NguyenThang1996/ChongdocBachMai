@model OsWebsite.Models.Config

@{
    ViewBag.Title = "Edit";    
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .tree-config {
        color: #fff;
        background: #2984ff;
        border-left-color: white;
    }
    .tree-config a {
        border-left-color: white !important;
     }
</style>
<section class="content-header"><h1>Quản lý nội dung cấu hình </h1></section>
<div class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box adm1">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading adm2">
                                Cập nhật thông tin
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12"></div>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true)
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.IDLang)

                                        <div class="form-group" style="display:none">
                                            @Html.Label("Logo", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.Logo, new { @class = "form-control", @id = "anhbia" })
                                                <br />
                                                <img src="@Model.Logo" width="90" alt="name" />
                                                <br />
                                                @Html.ValidationMessageFor(model => model.Logo)
                                                <br />
                                                <input id="chonanhbia" class="btn btn-default" type="button" value="Chọn logo" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Mail", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Email)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Số Hotline 1", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.HotLine, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.HotLine)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Số Hotline 2", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.Copyright, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Copyright)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Số Hotline 3", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Title)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Mail Footer", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.MailFooter, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MailFooter)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Link Fanpage", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextArea("FacebookId", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FacebookId)
                                            </div>
                                        </div>
                                        <div class="form-group" style="display:none">
                                            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Password)
                                            </div>
                                        </div>

                                        <div class="form-group" style="display:none">
                                            @Html.Label("Mô tả trang", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-8">
                                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Description)
                                            </div>
                                        </div>

                                        <div class="form-group" style="display:none">
                                            @Html.Label("Từ khóa", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-8">
                                                @Html.TextAreaFor(model => model.Keyword, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Keyword)
                                            </div>
                                        </div>
                                        <div class="form-group" style="display:none">
                                            @Html.Label("Nội dung thẻ Head", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-8">
                                                @Html.TextAreaFor(model => model.PlaceHead, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.PlaceHead)
                                            </div>
                                        </div>

                                        <div class="form-group" style="display:none">
                                            @Html.Label("Nội dung thẻ ngoài Body", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-8">
                                                @Html.TextAreaFor(model => model.PlaceBody, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.PlaceBody)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Thông tin liên hệ", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextArea("Contact", new { @class = "ckeditor" })
                                                @Html.ValidationMessageFor(model => model.Contact)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Nhúng bản đồ Google", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextArea("GoogleId", new { @class = "ckeditor" })
                                                @Html.ValidationMessageFor(model => model.GoogleId)
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Save" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script language="javascript" type="text/javascript">
        $(function () {
            $("#chonanhbia").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    $("#anhbia").val(fileUrl);
                };
                finder.popup();
            });
        });
    </script>
