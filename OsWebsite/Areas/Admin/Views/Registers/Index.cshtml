@model PagedList.IPagedList<OsWebsite.Models.Register>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .tree-contact {
        color: #fff;
        background: #2984ff;
        border-left-color: white;
    }

        .tree-contact a {
            border-left-color: white !important;
        }

    tr.Bold td {
        font-weight: bold !important;
    }

        tr.Bold td label {
            font-weight: bold !important;
        }

    tr td {
        font-weight: normal;
    }

        tr td label {
            font-weight: normal
        }
</style>
<section class="content-header"><h1>Quản lý Liên hệ</h1></section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box adm1">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("DeleteMuti", "Register", FormMethod.Post))
                        {
                            <input type="submit" value="Xóa" class="btn btn-default" onclick="return confirm('Bạn có muốn xóa mục đã chọn ?')" />
                            <div style='clear: both; height: 10px'></div>
                            <div class="panel panel-default">
                                 /.panel-heading 
                                <div class="panel-body">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover">
                                            <tr class="trHeader">
                                                <th><input type="checkbox" id="CheckAll" /></th>
                                                <th>
                                                    Tên người đăng ký
                                                </th>
                                                <th>
                                                    Học vị
                                                </th>
                                                <th>
                                                    Số điện thoại
                                                </th>
                                                <th>
                                                    Bệnh viện
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    Ngày tạo
                                                </th>
                                                <th>
                                                    Trạng thái
                                                </th>
                                                <th>
                                                    Xem chi tiết
                                                </th>
                                            </tr>

                                            @foreach (var item in Model)
                                            {
                                                if (item.IsActive == true)
                                                {
                                                    <tr class="trOdd">
                                                        <td><input type="checkbox" class="CheckboxID" name="ID" value="@item.Id" /></td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Job)
                                                        </td>                                  
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Phone)
                                                        </td>
                                                           <td>
                                                            @Html.DisplayFor(modelItem => item.Hospital)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>
                                                        <td>
                                                            @Html.Label(@item.DateCreate.ToString("dd/MM/yyyy"))
                                                        </td>
                                                        <td>
                                                            @if (item.IsActive == true)
                                                            {
                                                                @Html.Label("Đã xem");
                                                            }
                                                            else
                                                            {
                                                                @Html.Label("Chưa xem");
                                                            }
                                                        </td>

                                                        <td>
                                                            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "bnstatus" })
                                                        </td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr class="trOdd">
                                                        <td><input type="checkbox" class="CheckboxID" name="ID" value="@item.Id" /></td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Job)
                                                        </td>                                  
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Phone)
                                                        </td>
                                                           <td>
                                                            @Html.DisplayFor(modelItem => item.Hospital)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>
                                                        <td>
                                                            @Html.Label(@item.DateCreate.ToString("dd/MM/yyyy"))
                                                        </td>
                                                        <td>
                                                            @if (item.IsActive == true)
                                                            {
                                                                @Html.Label("Đã xem");
                                                            }
                                                            else
                                                            {
                                                                @Html.Label("Chưa xem");
                                                            }
                                                        </td>

                                                        <td>
                                                            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "bnstatus" })
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                        <div style="clear:both"></div>
                        <div class="page-list">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>