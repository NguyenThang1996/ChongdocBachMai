@model OsWebsite.Models.Gallery

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .tree-gallery {
        color: #fff;
        background: #2984ff;
        border-left-color: white;
    }

        .tree-gallery a {
            border-left-color: white !important;
        }
</style>
<section class="content-header"><h1>Câp nhập thư viện </h1></section>
<div class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box adm1">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading adm2">
                                Cập nhật thông tin
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12"></div>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.ID)
                                            @Html.HiddenFor(model => model.IDLang)

                                            <div class="form-group">
                                                <label class="control-label col-md-2">Tên :</label>
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">
                                                    Kiểu hình ảnh :
                                                </label>
                                                <div class="col-md-10">
                                                    @Html.DropDownList("Position", "-- Chọn kiểu hình ảnh --")
                                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">
                                                    Hình ảnh :
                                                </label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(model => model.Images, new { @class = "form-control", @id = "anhbia" })
                                                    @Html.ValidationMessageFor(model => model.Images)
                                                    <br />
                                                    <input id="chonanhbia" class="btn btn-default" type="button" value="Chọn hình ảnh" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">
                                                    Link :
                                                </label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">
                                                    Thứ tự :
                                                </label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(model => model.IsOrder, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.IsOrder, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2">
                                                    Kích hoạt :
                                                </label>
                                                <div class="col-md-10">
                                                    @Html.CheckBoxFor(model => model.IsActive)
                                                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Lưu" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
    <div>
    </div>
    @Html.ActionLink("Trở lại", "Index", "", new { @class = "btn btn-default" })
</div>
<script language="javascript" type="text/javascript">
    $(function () {
        $("#chonanhbia").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#anhbia").val(fileUrl);
            };
            finder.popup();
        });
        $("#Position").addClass("form-control");
    });
    $("form").submit(function (e) {
        if ($("#Name").val() == "") {
            alert("Tên hình ảnh không được để trống");
            $("#Name").focus();
            return false;
        }
        if ($("#Position").val() == "") {
            alert("Bạn chưa chọn kiểu hình ảnh");
            $("#Position").focus();
            return false;
        }
        if ($("#anhbia").val() == "") {
            alert("Bạn chưa chọn hình ảnh");
            $("#anhbia").focus();
            return false;
        }
        if ($("#IsOrder").val() == "") {
            alert("Số thứ tự không được để trống");
            $("#IsOrder").focus();
            return false;
        }
    });
</script>
